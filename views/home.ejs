<html>
    <head>
        <title>
            <%= title %>
        </title>
        <link rel="stylesheet" href="/css/home.css">
    </head>
    <body>
        <h1 id="main-heading">
            <span class="c-letter">C</span>
            <span class="s-text">ontact</span>
            <span class="c-letter">L</span>
            <span class="s-text">ist</span>   
        </h1>

        <form action="/create-contact" method="POST">
            <input type="text" name="name" placeholder="Enter Name" required>
            <input type="number" name="phone" placeholder="Enter Phone Number" required>
            <button type="submit">Add Contact</button>
        </form>

        <div>
            <ul id="contact-list">
                <% for(let i of contact_list){  %>
                    <li>
                        <p class="name"><%= i.name %></p>
                        <p class="phone"><%= i.phone %></p>
                        <button class="del-button"><a href="/delete-contact/?id=<%= i.id %>">Delete</a></button>   
                    </li> 
                <% } %>
            </ul>
        </div>
        
        
        <script src="/js/home.js"></script>
    </body>
</html>